<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
  <script src="../../js/index.js"></script>

  <!------ Include the above in your HEAD tag ---------->

</head>

<body>
  
  <header>
    <% include ../partials/header %>
    <link rel="stylesheet" href="../../styles/css/validation.css">
  </header>
  <div id="centered">
    <br/><br/>
    <section id="posts">
      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card">
              <div class="card-header">
                <h4>Top 10 Customers</h4>
              </div>
              <table class="table table-striped">
                <thead class="thead-inverse">
                  <tr>
                    <th>#</th>
                    <th>Customer Name</th>
                    <th>Total Amount Spent</th>
                    <th>Contact Number</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody id="student_details">
                </tbody>
  
              </table>
            </div>
          </div>
          <div class="col-md-3">
  
            <div class="card text-center bg-primary text-white mb-3">
              <div class="card-body">
                <h4>Number of Customers</h4>
                <h4 class="display-4">
                  <i class="fa fa-users"></i>
                  <div id="student_sidePane" style="display: inline-block"></div>
                </h4>
              </div>
            </div>

            <div class="card text-center bg-success text-white mb-3">
              <div class="card-body">
                <h4>Total Sales Amount</h4>
                <h4 class="display-4">
                  <i class="fa fa-usd"></i>
                  <div id="batch_sidePane" style="display: inline-block"></div>
                </h4>
              </div>
            </div>
  
            
  
            <div class="card text-center bg-warning text-white mb-3">
              <div class="card-body">
                <h4>Total Quantity Sold </h4>
                <h4 class="display-4">
                  <i class="fa fa-shopping-bag"></i>
                  <div id="fee_sidePane" style="display: inline-block"></div>
                </h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</body>
